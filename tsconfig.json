{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "DOM"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": false,
      "strict": true,
      "resolveJsonModule": true
   }
}